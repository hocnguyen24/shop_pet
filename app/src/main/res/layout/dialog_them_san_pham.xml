<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen_dialog_doan"
    android:orientation="vertical"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nen_dialog_doan"
            android:orientation="vertical"
            android:padding="20sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloothambi2bold"
                android:gravity="center"
                android:text="Thêm sản phẩm"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Link ảnh sản phẩm: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinL_In_Anh_SanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_In_Anh_San_Pham"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/vien_input_doan"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:hint="Nhập ở đây...."
                    android:padding="10sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Tên sản phẩm: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinL_TenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edten_san_pham"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/vien_input_doan"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:hint="Nhập ở đây...."
                    android:padding="10sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Giá sản phẩm: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinL_GiaSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edgia_san_pham"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/vien_input_doan"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:hint="Nhập ở đây...."
                    android:padding="10sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Mã loại sản phẩm: "
                android:textColor="@color/black"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/spnma_loai_san_pham"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:background="@drawable/vien_input_doan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Số lượng: "
                android:textColor="@color/black"
                android:textSize="17sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tinL_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtsoluong"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/vien_input_doan"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:hint="Nhập ở đây...."
                    android:padding="10sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2semibold"
                android:text="Mô tả: "
                android:textColor="@color/black"
                android:textSize="17sp" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edmo_ta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:padding="5sp">

                <Button
                    android:id="@+id/btnhuy_themlsp"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/khung_button"
                    android:text="Hủy"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnthemlsp"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/khung_button"
                    android:text="Thêm"
                    android:textAllCaps="false"
                    android:textColor="@color/xanh_doan" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>