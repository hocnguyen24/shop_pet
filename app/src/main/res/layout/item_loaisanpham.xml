<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/khung_item"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtma_loai_san_pham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:fontFamily="@font/baloothambi2regular"
            android:text="Mã loại sản "
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/btnxoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_xoa"
            android:background="@drawable/khung_item"
            android:layout_gravity="right|center"
            android:layout_marginRight="10sp"
         />
    </FrameLayout>

    <TextView
        android:id="@+id/txtten_loai_san_pham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="ten loại sản phẩm: "
        android:textSize="20sp" />

</LinearLayout>