<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="5sp"
    android:background="@color/hong_nhat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_Anhsp_GianHang"
            android:layout_width="130sp"
            android:layout_height="150sp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtten_hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/baloothambi2regular"
                    android:text="tne hat"
                    android:textSize="18sp" />


            </FrameLayout>

            <TextView
                android:id="@+id/txtgia_hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:drawableEnd="@drawable/ic_coin"
                android:fontFamily="@font/baloothambi2regular"
                android:text="300"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txttrang_thai_san_pham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/baloothambi2regular"
                android:text="Tồn kho "
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtSoluongdaban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/baloothambi2regular"
                android:text="Lượt bán ra: "
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_themvaogio"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_gravity="end"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="3sp"
                android:background="@drawable/khung_button"
                android:drawableEnd="@drawable/cart_doan"
                android:fontFamily="@font/baloothambi2regular"
                android:padding="5sp"
                android:text="Thêm vào giỏ hàng"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txtHetHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hết hàng"
                android:layout_gravity="end"
                android:textSize="16sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="10sp"
                android:textColor="@color/mau_do"
                android:fontFamily="@font/baloothambi2regular"
                android:layout_marginBottom="3sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>