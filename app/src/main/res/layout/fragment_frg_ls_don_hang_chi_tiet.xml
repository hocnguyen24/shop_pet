<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mau_hong"
    tools:context=".fragment.frg_ls_don_hang_chi_tiet">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_Back_lichSu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử đơn hàng"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="30sp"
                android:layout_toRightOf="@+id/img_Back_lichSu"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="26sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_Lich_Su_Don_Hang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_ls_don_hang_chi_tiet"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/img_Back_lichSu"/>
        </RelativeLayout>

</FrameLayout>