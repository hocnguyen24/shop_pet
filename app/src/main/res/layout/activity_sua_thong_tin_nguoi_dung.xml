<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khung_radius_top_30"
    tools:context=".man_hinh_dang_ky">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTroVeDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_Dang_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Sửa thông tin"
            android:textColor="@color/mau_chu"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/lin_khung_Dang_ky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Dang_ky"
            android:background="@drawable/khung_man_dang_ky"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20sp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Tên đăng nhập"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tipL_Ten_Dang_Nhap_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/mau_chu"
                    android:theme="@style/PesShop2"

                    >

                    <EditText
                        android:id="@+id/edt_Ten_Dang_Nhap_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập tên đăng nhập"
                        android:textColorHint="@color/mau_chu"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Mật khẩu"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tipL_Nhap_Pass_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edmat_khau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập mật khẩu"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Nhập mật khẩu mới"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Lai_Pass_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edmat_khau_moi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập mật khẩu mới"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Nhập lại mật khẩu mới"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Lai_Pass_moi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Lai_Pass_moi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập lại mật khẩu mới"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Họ tên"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Ho_Ten_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Ho_Ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập họ và tên"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Số điện thoại"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_SDT_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_SDT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập số điện thoại"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Địa chỉ"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Dia_Chi_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Dia_Chi_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập địa chỉ"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Email"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Email_DangKy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Email_DangKy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập email"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloothambi2semibold"
                    android:text="Link ảnh"
                    android:textColor="@color/mau_chu"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiL_Nhap_Url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_Nhap_Url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloothambi2regular"
                        android:hint="Nhập link ảnh"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_dong_y"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_below="@+id/lin_khung_Dang_ky"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12sp"
            android:background="@drawable/khung_button_dangnhap"
            android:fontFamily="@font/baloothambi2semibold"
            android:gravity="center"
            android:layout_marginBottom="10sp"
            android:text="OK"
            android:textSize="22sp" />

    </RelativeLayout>
</ScrollView>