<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp"
    android:background="@drawable/nen_dialog_doan"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloothambi2bold"
        android:gravity="center"
        android:text="Thêm Người Dùng"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập tên tài khoản: "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_ten_tai_khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_ten_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập mật khẩu: "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_mat_khau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập họ tên: "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_ho_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_ho_ten"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập số điện thoại: "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_so_dien_thoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_so_dien_thoai"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập địa chỉ "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_dia_chi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_dia_chi"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Nhập Email: "
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/vien_input_doan"
            android:fontFamily="@font/baloothambi2semibold"
            android:hint="Nhập ở đây...."
            android:padding="10sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:padding="5sp">

        <Button
            android:id="@+id/btn_huy_ND"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/khung_button"
            android:text="Hủy"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_Them_ND"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:background="@drawable/khung_button"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textColor="@color/xanh_doan" />
    </FrameLayout>


</LinearLayout>