<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.frgAddNguoiDung">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/mau_hong"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloothambi2bold"
            android:gravity="center"
            android:text="Thêm Người Dùng"
            android:textColor="@color/mau_chu"
            android:textSize="25sp" />
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập url ảnh tài khoản: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_anh_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_anh_tai_khoan"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập tên tài khoản: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_ten_tai_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ten_tai_khoan"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập mật khẩu: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_mat_khau"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập họ tên: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_ho_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ho_ten"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập Email: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập số điện thoại: "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_so_dien_thoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_so_dien_thoai"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập địa chỉ "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_dia_chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dia_chi"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Tiền "
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_tien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_Tien"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2semibold"
            android:text="Nhập loại tài khoản"
            android:textColor="@color/mau_chu"
            android:textSize="17sp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginHorizontal="10sp"
            android:id="@+id/in_LoaiTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_LoaiTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5sp"
                android:background="@drawable/vien_input_doan"
                android:fontFamily="@font/baloothambi2semibold"
                android:hint="Nhập ở đây...."
                android:padding="10sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="30sp"
            android:layout_marginHorizontal="10sp"
            android:layout_below="@+id/txtBancochanchanmuonxoa"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_out_Them_NguoiDung"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:background="@drawable/khung_button"
                android:text="Hủy"
                android:layout_marginRight="10sp"
                android:textColor="#de0b0b" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confilm_Them_NguoiDung"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:background="@drawable/khung_button"
                android:text="Thêm"
                android:layout_marginLeft="10sp"
                android:textColor="#4696EB" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>